@model Flinder.Web.Data.Flight

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this flight?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Airline
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Airline_Name)
        </dd>
        <dt class = "col-sm-2">
            From
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Origin_Airport_Name)
        </dd>
        <dt class = "col-sm-2">
            To
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination_Airport_Name)
        </dd>
        <dt class = "col-sm-2">
            Take Off Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TakeOff_Time)
        </dd>
        <dt class = "col-sm-2">
            Landing Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Landing_Time)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
    </form>
</div>
